<div class="page otakantaa" id="page">
  {{> organisms-header }}
  <section role="main" class="edit-hanke-form">
    <h1>Muokkaa hanketta</h1>
    <div>
      <div class="hanke-img-container">
        <img src="../../images/fpo_16x9.png" alt="Taustakuva" class="hanke-bg" />
        <img src="../../images/fpo_avatar.png" alt="Logo" class="hanke-logo" />
        <input class="btn edit-bg" type="submit" value="Vaihda taustakuva" />
        <input class="btn edit-logo" type="submit" value="Vaihda logo" />
      </div>
      <div id="hanke-title" class="form-element text-el content-item hanke-title">
        <label for="text-field">Otsikko tai nimi*</label>
        <input placeholder="Kirjoita tähän otsikko tai nimi..." maxlength="130" />
      </div>
    </div>
    <div id="hanke-intro" class="form-element text-el content-item large">
      <div class="helper-container">
        <span class="icon-help" title="Tässä aputeksti. Aputeksti auttaa suuresti käyttäjää." placement="top">Esittely*</span>
        <p class="helper-text small is-vishidden">Tässä aputeksti. Aputeksti auttaa suuresti käyttäjää.</p>
      </div>
      <textarea placeholder="Kirjoita tähän esittely..." maxlength="400"></textarea>
    </div>
    <div id="hanke-description" class="form-element text-el content-item large">
      <div class="helper-container">
        <span class="icon-help" title="Tässä aputeksti. Aputeksti auttaa suuresti käyttäjää." placement="top">Kuvaus ja tavoitteet*</span>
        <p class="helper-text small is-vishidden">Tässä aputeksti. Aputeksti auttaa suuresti käyttäjää.</p>
      </div>
      <textarea placeholder="Kirjoita tähän kuvaus ja tavoitteet..." maxlength="2000"></textarea>
    </div>
    <div id="hanke-responsibility" class="form-element text-el content-item large">
      <label for="text-field">Vastuujärjestö tai -henkilö*</label>
      <input placeholder="Kirjoita tähän vastuujärjestö tai -henkilö..." maxlength="130" />
    </div>
    <div id="hanke-publicity" class="content-item large">
      <div class="helper-container">
        <span class="icon-help" title="Tässä aputeksti. Aputeksti auttaa suuresti käyttäjää." placement="top">Hankkeen näkyvyys*</span>
        <p class="helper-text small is-vishidden">Tässä aputeksti. Aputeksti auttaa suuresti käyttäjää.</p>
      </div>
      <span class="select-style">
        <span class="border-fix">
          <select id="" class="btn-group">
            <option selected="selected" value="0">Julkinen/näkyy kaikille</option>
            <option value="1">Vain kutsutuille</option>
          </select>
        </span>
      </span>
    </div>
    <div id="hanke-publish" class="content-item large">
      <div class="helper-container">
        <span class="icon-help" title="Tässä aputeksti. Aputeksti auttaa suuresti käyttäjää." placement="top">Hankkeen julkaisun tila*</span>
        <p class="helper-text small is-vishidden">Tässä aputeksti. Aputeksti auttaa suuresti käyttäjää.</p>
      </div>
      <span class="select-style">
        <span class="border-fix">
          <select id="" class="btn-group">
            <option selected="selected" value="0">Suunnitteilla</option>
            <option value="1">Julkaistu</option>
            <option value="2">Peruttu</option>
          </select>
        </span>
      </span>
    </div>

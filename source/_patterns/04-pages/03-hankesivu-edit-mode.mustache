    <div id="hanke-date" class="content-item large">
      <div class="helper-container">
        <h3 class="icon-help" title="Example tip text." placement="top">Hankkeen aikataulu*</h3>
        <p class="helper-text small is-vishidden">Tässä aputeksti. Aputeksti auttaa suuresti käyttäjää.</p>
      </div>
      <div class="event-date-container">
        <div class="form-element date-element left-block">
          <label for="date-picker">Hankkeen alkupvm.</label>
          <input type="text" id="date-picker" class="datepicker" value="1.6.2014" />
        </div>
        <div class="form-element date-element right-block">
          <label for="date-picker">Hankkeen loppupvm.</label>
          <input type="text" id="date-picker" class="datepicker" value="14.5.2015" />
        </div>
        <div class="helper-container">
          <span class="icon-help" title="Example tip text." placement="top">Hankkeen yhteenvedon julkaisu*</span>
          <p class="helper-text small is-vishidden">Tässä aputeksti. Aputeksti auttaa suuresti käyttäjää.</p>
        </div>
        <div class="event-date-container">
          <div class="form-element date-element left-block">
            <label for="date-picker">Yhteenvedon julkaisupvm.</label>
            <input type="text" id="date-picker" class="datepicker" value="14.5.2015" />
          </div>
        </div>
      </div>
    </div>
    <!-- Optional field those will be fadeout -->
    <div class="fadeout">
      <div id="hanke-attachments" class="content-item large">
        <h3>Liitteet</h3>
        <div id="hanke-add-attachment">
          <form action="" class="attachment-form">
            <div class="form-element attachment-container">
              <label for="upload-file" class="upload-file-button">Lisää tiedosto</label>
              <input type="file" id="upload-file" />
            </div>
          </form>
        </div>
        <!-- Hanke attachment list -->
        <div id="hanke-attachment-list">
          <div class="attachment-form inline-element">
            <div class="form-element attachment-edit">
              <label class="edit-file-button">muokkaa</label>
              <div class="mime-container">
                <i class="fa fa-file-o"></i>
              </div>
              <a class="file-title">Otsikko</a>
              <p>tiedostonimi...jpg</p>
            </div>
          </div>
          <div class="attachment-form inline-element">
            <div class="form-element attachment-edit">
              <label class="edit-file-button">muokkaa</label>
              <div class="mime-container">
